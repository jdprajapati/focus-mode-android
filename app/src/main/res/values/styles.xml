<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="NoActionBarTheme" parent="AppTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="NoActionBarTheme">
        <item name="android:statusBarColor">@android:color/white</item>
    </style>

    <style name="FabShape" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerSizeTopLeft">@dimen/_20sdp</item>
    </style>

    <style name="CardShape" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSizeTopLeft">@dimen/_15sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_15sdp</item>
    </style>

</resources>